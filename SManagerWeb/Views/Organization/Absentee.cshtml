@model IEnumerable<Models.AbsenteeForm>
@{
    ViewBag.Title = "Absentee";
    Layout = "~/Views/Shared/_LayoutOrganization.cshtml";
}

@Html.Partial("_NavigationBar", (string)ViewBag.OrganizationID)
<section id="content">
    @Html.Partial("_ProfileBar")
    <main>
        <div class="d-flex justify-content-between">
            <div>
                <h1 class="title">Absentee</h1>
                <ul class="breadcrumbs">
                    <li><a href="#">Organization</a></li>
                    <li class="divider"></li>
                    <li><a href="#" class="active">Absentee</a></li>
                </ul>
            </div>
            <div>

            </div>
        </div>
        <div class="content pt-3 pb-5">
            @foreach (var item in Model)
            {
                <div class="card card-body form-item rounded-0 border-0 border-bottom">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div><b>Title:</b> @item.Title</div>
                            <div class="d-flex">
                                <div class="me-5"><b>From:</b> @item.Student.ApplicationUser.FullName</div>
                                <div class="me-5"><b>Write in:</b> @item.CreateDate</div>
                                <div><b>Date absentee:</b> @item.Date.ToString("d")</div>
                            </div>
                        </div>
                        <div class="d-flex">
                             <a href="@Url.Action("AbsenteeDetail","Organization",new {ID = (string)ViewBag.OrganizationID, IDForm = item.ID})" class="btn btn-outline-dark" style="min-width: 60px; max-height: 50px;">Detail</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </main>
</section>