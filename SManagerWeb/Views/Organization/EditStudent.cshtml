@model Models.ViewModel.StudentViewModel
@{
    ViewBag.Title = "EditStudent";
    Layout = "~/Views/Shared/_LayoutOrganization.cshtml";
}


<link href="~/Public/css/shared/_Card.css" rel="stylesheet" />
<link href="~/Public/css/Organization/CreateTeacher.css" rel="stylesheet" />
<style>
    .div-add-avatar{
        background-image: url(@Url.Content("~/Public/assets/images/add_image.png"));
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        width: 120px;
        height: 120px;
    }
    .generate-password{
        cursor: pointer;
        font-style: italic;
        font-size: 0.95em;
        color: blue;
        opacity: 0.75;
    }
</style>
@Html.Partial("_NavigationBar", (string)ViewBag.OrganizationID)
<section id="content">
    @Html.Partial("_ProfileBar")
    <main>
        <div class="d-flex justify-content-between">
            <div>
                <h1 class="title">Edit Student</h1>
                <ul class="breadcrumbs">
                    <li><a href="#">Organization</a></li>
                    <li><a href="#">Students</a></li>
                    <li class="divider"></li>
                    <li><a href="#" class="active">Create Student</a></li>
                </ul>
            </div>
        </div>
        <div class="fst-italic d-flex">
            <div class="me-5 mb-2">Create by: @Model.CreateBy</div>
            <div>Create date: @Model.CreateDate</div>
        </div>
        <div class="content">
            @using (Html.BeginForm("EditStudentHandler", "Organization", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <input type="hidden" name="ID" value="@ViewBag.OrganizationID" />
                <div class="row">
                    <div class="col-lg-4">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    Profile
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row mb-2 text-center">
                                    <div class="div-add-avatar rounded-circle m-0 p-0 position-relative m-auto">
                                        <img src="@(Model.AvatarPath!=null? Url.Content(Model.AvatarPath):"")"
                                             id="img_avatar" class="rounded-circle m-0 p-0 opacity-0" style="width: 120px; height: 120px;">
                                        <input id="avatar" name="avatar" type="file" class="rounded-circle bg-black m-0 p-0 opacity-0" />
                                    </div>
                                </div>
                                <div class="row">
                                    <label class="col-form-label ps-0">Name</label>
                                    @Html.TextBoxFor(x => x.FullName, new { @class = "form-control" })
                                </div>
                                <div class="row">
                                    <label class="col-form-label ps-0">Phone number</label>
                                    @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
                                </div>
                                <div class="row">
                                    <label class="col-form-label ps-0">Email</label>
                                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-8">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    Account
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <label class="col-form-label ps-0">Username</label>
                                        @Html.TextBoxFor(x => x.Username, new { @class = "form-control", @readonly = "readoly" })
                                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-lg-6">
                                        <label class="col-form-label ps-0">Password</label>
                                        <input type="text" name="password" id="Password" class="form-control" />
                                    </div>
                                </div>
                                <label class="generate-password mt-2"><i class="fa-solid fa-circle-question"></i> Click here to reset password</label>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    Description
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-5">
                                        <label class="col-form-label ps-0">Gender</label>
                                        @Html.TextBoxFor(x => x.Gender, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })

                                    </div>
                                    <div class="col-7">
                                        <label class="col-form-label ps-0">Date of birth</label>
                                        @Html.TextBoxFor(x => x.DayOfBirth, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.DayOfBirth, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="">
                                    <label class="col-form-label ps-0">Address</label>
                                    @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                                </div>

                            </div>
                        </div>
                        <div class="card ">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    Class
                                </h5>
                            </div>
                            <div class="card-body ">
                                @Html.TextBoxFor(x => x.Class, new { @class = "form-control", @readonly = "readonly" })
                                @Html.ValidationMessageFor(m => m.Class, "", new { @class = "text-danger" })
                            </div>

                        </div>
                    </div>
                </div>
                @Html.ValidationSummary()
                <div class="d-flex">
                    <input type="submit" class="btn btn-primary me-2" value="Edit" />
                    <a class="btn btn-dark opacity-50" href="@Url.Action("Students","Organization", new {ID = ViewBag.OrganizationID})">Back to list</a>
                </div>
            }
        </div>
    </main>
</section>

<script src="~/Public/js/Organization/CreateTeacher.js"></script>
<script src="~/Public/js/Organization/GeneratePassword.js"></script>
<script>
    $(".generate-password").click(function () {
        $("#Password").val(`${generatePassword(8)}`)
    });
</script>