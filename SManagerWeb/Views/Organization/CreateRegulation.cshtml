
@using Common.Util
@{
    ViewBag.Title = "ChangeRegulation";
    Layout = "~/Views/Shared/_LayoutOrganization.cshtml";
    <link href="~/Public/css/Organization/Regulation.css" rel="stylesheet" />
}
@{ 
    string id = ViewBag.ID;
}
@Html.Partial("_NavigationBar", id)
<section id="content">
    @Html.Partial("_ProfileBar")
    <main>
        <div>
            <h1 class="title">Create regulation</h1>
            <ul class="breadcrumbs">
                <li><a href="#">Organization</a></li>
                <li class="divider"></li>
                <li><a href="#">Regulation</a></li>
                <li class="divider"></li>
                <li><a href="#" class="active">Create regulation</a></li>
            </ul>
        </div>
        @using (Html.BeginForm("CreateRegulation", "Organization", FormMethod.Post,
                            new { enctype = "multipart/form-data", ID = id }))
        {
            @Html.AntiForgeryToken()
            <div id="main-content">  
            </div>
            <div class="d-flex justify-content-between">
                <div class="d-flex">
                    <div class="btn text-white me-3" role="button"
                         style="min-width: 100px; background-color: #f96b36;" onclick="addShift()">ADD</div>
                    <div class="btn text-white" role="button"
                         style="min-width: 100px; background-color: #f96b36;" onclick="delShift()">REMOVE</div>
                </div>
                <button type="submit" class="btn btn-outline-primary">Create</button>
            </div>

        }

    </main>

</section>
<script src="~/Public/js/Organization/ChangeRegulation.js"></script>