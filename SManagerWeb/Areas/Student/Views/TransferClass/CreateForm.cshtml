@model Models.ClassTransferringForm
@{
    ViewBag.Title = "CreateForm";
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Proza+Libre&display=swap" rel="stylesheet">
}
<style>
    .text-proza {
        font-family: 'Proza Libre', sans-serif;
    }
    .input-style {
        width: 300px;
        border: none;
        outline: none;
        border-bottom: solid 1px black;
    }
    .btn.btn-style {
        width: 160px;
        background: #173143;
        color: white;
        border-radius: 0;
        transition: ease 0.2s;
    }
    .btn.btn-style:hover {
        opacity: 0.75;
    }
</style>
<div class="d-flex">
    <div class="bg-white p-3 w-100">
        <div class="d-flex justify-content-between mb-2">
            <div>
                <h1 class="title">Create form</h1>
                <ul class="breadcrumbs">
                    <li><a href="#">Student</a></li>
                    <li class="divider"></li>
                    <li><a href="#" class="active">Create form</a></li>
                </ul>
            </div>
        </div>

        <div class="m-auto" style="max-width: 700px;">
            <div class="card card-body text-center border-0">
                @using (Html.BeginForm("CreateFormHandler", "TransferClass", FormMethod.Post))
                {
                    <div class="text-center"><h3 class="fw-semibold text-proza">Transfer Class Form</h3></div>
                    <div class="mb-5"><h6 class="opacity-75">This form will be sent to your teacher and please wait for a response</h6></div>
                    <div class="m-5">
                        <b class="text-danger">*</b>
                        @Html.TextBoxFor(x => x.Title, new { @class = "input-style", @placeholder = "Subject" })
                    </div>
                    <div class="d-flex m-5">
                        <div class="w-100">
                            <b class="text-danger">*</b>
                            <select name="NewClass" class="input-style">
                                @foreach (var item in (List<Models.Class>)ViewBag.Classes)
                                {
                                    <option value="@item.IDClass">@item.Name</option>
                                }
                            </select>
                        </div>

                    </div>
                    <div class="m-2">
                        <b class="text-danger">*</b>
                        @Html.TextAreaFor(x => x.Description, new { @class = "input-style", @cols = 100, @style = "min-height: 300px;", @placeholder = "Description" })
                    </div>
                    <div class="m-5">
                        <button type="submit" class="btn btn-style">Send</button>
                    </div>
                }

            </div>

        </div>
    </div>
    <div>
        @Html.Partial("_ShortProfile", (Models.ViewModel.StudentViewModel)ViewBag.Student)
    </div>
</div>