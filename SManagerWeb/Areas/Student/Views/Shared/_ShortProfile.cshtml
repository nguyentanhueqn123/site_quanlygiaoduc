@model Models.ViewModel.StudentViewModel
<style>
    .profile-panel{
        width: 310px;
        height: 310px;
        margin-left: 8px;
        border: none;
        border-radius: 3px;
    }
    .profile-panel-part1{
        height: 90px;
    }
    .btn-change{
        max-height: 24px;
        padding: 3.2px 6px;
        font-size: 0.7em;
    }
    .profile-panel-part2{
        height: 110px;
        display:flex;
        justify-content: space-between;
        flex-direction: column;
    }
    .profile-panel-part2 > div {
        height: 24px;
    }
</style>
<div class="d-none d-md-block card card-body p-4 profile-panel">
    <div class="d-flex profile-panel-part1">
        <img src="@(Model.AvatarPath != null ? Url.Content(Model.AvatarPath) : "~/Source/Default/student.png")"/>
        <div class="ms-2 d-flex flex-column align-content-start justify-content-between">
            <div>@Model.FullName</div>
            <div>@Model.Username</div>
            <div class="opacity-75">Wish you a nice day</div>
        </div>
    </div>
    <hr class="mt-3 mb-4"/>
    <div class="profile-panel-part2">
        <div><a href="@Url.Action("Index","Profile")" class="mb-2">Change password</a></div>
        <div class="mb-2 d-flex justify-content-between">
            <div>
                @Model.Email
            </div>
           <div>
               <a href="@Url.Action("Index","Profile")" class="btn btn-outline-danger rounded-5 border-1 btn-change">
                   Change
               </a>
           </div>
        </div>
        <div class="d-flex justify-content-between">
            <div>
                @Model.PhoneNumber
            </div>
            <div>
                <a href="@Url.Action("Index","Profile")" class="btn btn-outline-danger rounded-5 border-1 btn-change">
                    Change
                </a>
            </div>
        </div>
    </div>
</div>
