@model Models.ViewModel.TeacherViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Teacher/Views/Shared/_Layout.cshtml";
}

<link href="~/Public/css/shared/_Card.css" rel="stylesheet" />
<link href="~/Public/css/Organization/CreateTeacher.css" rel="stylesheet" />
<style>
    .div-add-avatar{
        background-image: url(@Url.Content("~/Public/assets/images/add_image.png"));
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        width: 120px;
        height: 120px;
    }
    .generate-password{
        cursor: pointer;
        font-style: italic;
        font-size: 0.95em;
        color: blue;
        opacity: 0.75;
    }
</style>
<div class="d-flex">
    <div class="bg-white p-3">
        <div class="d-flex justify-content-between">
            <div>
                <h1 class="title">Profile</h1>
                <ul class="breadcrumbs">
                    <li><a href="#">Organization</a></li>
                    <li><a href="#">Teachers</a></li>
                    <li class="divider"></li>
                    <li><a href="#" class="active">Profile</a></li>
                </ul>
            </div>
        </div>
        <div class="content">
            @using (Html.BeginForm("EditTeacher", "Profile", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
         
                <div class="row">
                    <div class="col-lg-4">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    Profile
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row mb-2 text-center">
                                    <div class="div-add-avatar rounded-circle m-0 p-0 position-relative m-auto">
                                        <img id="img_avatar" src="@(Model.AvatarPath!=null? Url.Content(Model.AvatarPath):"")"
                                             class="rounded-circle m-0 p-0 opacity-0" style="width: 120px; height: 120px;">
                                        <input id="avatar" name="avatar" type="file" class="rounded-circle bg-black m-0 p-0 opacity-0" />
                                    </div>
                                </div>
                                <div class="row">
                                    <label class="col-form-label ps-0">Name</label>
                                    @Html.TextBoxFor(x => x.FullName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })

                                </div>
                                <div class="row">
                                    <label class="col-form-label ps-0">Phone number</label>
                                    @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })

                                </div>
                                <div class="row">
                                    <label class="col-form-label ps-0">Email</label>
                                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-8">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    Account
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <label class="col-form-label ps-0">Username</label>
                                        @Html.TextBoxFor(x => x.Username, new { @class = "form-control", @readonly = "readoly" })
                                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-lg-6">
                                        <label class="col-form-label ps-0">Password</label>
                                        <input type="text" name="password" id="Password" class="form-control" />
                                    </div>
                                </div>
                                <label class="generate-password mt-2"><i class="fa-solid fa-circle-question"></i> Click here to reset password</label>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    Description
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-3">
                                        <label class="col-form-label ps-0">Gender</label>
                                        @Html.TextBoxFor(x => x.Gender, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-4">
                                        <label class="col-form-label ps-0">Date of birth</label>
                                        @Html.TextBoxFor(x => x.DayOfBirth, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.DayOfBirth, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-5">
                                        <label class="col-form-label ps-0">ID Card</label>
                                        @Html.TextBoxFor(x => x.IDCard, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.IDCard, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="">
                                    <label class="col-form-label ps-0">Address</label>
                                    @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <label class="col-form-label ps-0">Start Date</label>
                                        @Html.TextBoxFor(x => x.StartJobDate, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.StartJobDate, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-6">
                                        <label class="col-form-label ps-0">Specialization</label>
                                        @Html.TextBoxFor(x => x.Specialization, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Specialization, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="">
                                    <label class="col-form-label ps-0">Degree</label>
                                    @Html.TextBoxFor(x => x.Degree, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Degree, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @Html.ValidationSummary()
                <div class="d-flex">
                    <input type="submit" class="btn btn-primary me-2" value="Save changes" />
                </div>
            }
        </div>
    </div>
    <div>
        <div>
            @Html.Partial("_ShortProfile", Model)
        </div>
    </div>
</div>

<script src="~/Public/js/Organization/CreateTeacher.js"></script>
<script src="~/Public/js/Organization/GeneratePassword.js"></script>
<script>
    $(".generate-password").click(function () {
        $("#Password").val(`${generatePassword(8)}`)
    });
</script>
